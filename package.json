	"description": "nhp is a html templating language which uses the moustache syntax, and tags similar to php for methods.",
	"keywords": [
		"nhp",
		"html",
		"nosejs",
		"template",
		"NexusTools",
		"integration",
		"compiler",
		"language"
	],
	"bugs": {
		"url" : "https://github.com/NexusTools/node-nhp/issues"
	},
	"repository" : {
		"type" : "git",
		"url" : "https://github.com/NexusTools/node-nhp.git"
	},
	"scripts": {
		"test": "mocha --timeout 10000 --require test/support/env --reporter spec --globals __typeinclude__ --check-leaks test/",
		"test-travis": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly --  --timeout 20000 --require test/support/env --reporter spec --globals __typeinclude__ --check-leaks test/",
        "postinstall": "tscac"
	},
	"typesource": "lib",
    "preferGlobal": true,
	"main" : "index.ts",
	"bin" : {
		"nhpc" : "./bin/nhpc" 
	},
	"engines" : {
		"node" : ">=1.0.0"
	},
	"dependencies": {
		"async": "latest",
		"underscore": "latest",
		"htmlparser2": "latest",
		"typeinclude": ">=0.5.8",
		"nulllogger": ">=0.2.2"
	},
	"devDependencies": {
		"istanbul": "0.3.2",
    	"mocha": "~1.21.4"
	}
