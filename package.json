{
	"name": "nhp",
	"author": "NexusTools",
	"homepage": "https://www.nexustools.net/projects#nhp",
	"version": "0.1.2",
	"licenses": [
		{
			"type": "Apache License 2.0", 
			"url": "https://github.com/NexusTools/node-nhp/blob/master/LICENSE.md"
		}
	],
	"description": "node-nhp is a html templating language which uses tags similar to php, but a javascript like language syntax.",
	"keywords": [
		"php",
		"html",
		"nosejs",
		"template",
		"NexusTools",
		"integration",
		"compiler",
		"language"
	],
	"bugs": {
		"url" : "https://github.com/NexusTools/node-nhp/issues"
	},
	"repository" : {
		"type" : "git",
		"url" : "https://github.com/NexusTools/node-nhp.git"
	},
	"scripts": {
		"test": "mocha --require test/support/env --reporter spec test/",
		"test-travis": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --require test/support/env --reporter spec test/",
        "postinstall": "tscac src"
	},
	"preferGlobal" : true,
	"main" : "index",
	"bin" : {
		"nhpc" : "./bin/nhpc" 
	},
	"engines" : {
		"node" : ">=1.0.0"
	},
	"dependencies": {
		"htmlparser2": "latest",
		"typeinclude": "latest",
		"yargs": "latest"
	}
}
