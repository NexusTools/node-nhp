#!/usr/bin/env node

var argv = require('yargs').argv;
var nhp = require("../index.js");
var path = require("path");

console.log(argv);

var instance = new nhp();
instance.compile(argv._[0], argv.out || path.dirname(argv._[0]) + path.basename(argv._[0] + ".js"), function(error) {
    if(error)
        throw error;
    
    process.exit(0);
});